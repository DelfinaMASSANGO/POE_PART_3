<Window x:Class="RecipeApp.ScaleRecipeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Scale Recipe" Height="200" Width="400">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/background 2.jpeg"/>
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="191*"/>
            <ColumnDefinition Width="9*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Margin="10,10,10,10" Grid.ColumnSpan="2">
            <TextBlock Text="Enter scale factor (e.g., 0.5, 2, 3)" FontSize="20" Foreground="Black" />
            <TextBox x:Name="ScaleFactorTextBox" Margin="0,0,0,10" />

            <Button Content="Scale Recipe" Click="ScaleRecipe_Click" Background="Black" />
        </StackPanel>
    </Grid>
</Window>
