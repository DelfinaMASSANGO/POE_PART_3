<Window x:Class="RecipeApp.FilterRecipesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Filter Recipes" Height="450" Width="400">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/background 2.jpeg"/>
        </Grid.Background>
        <StackPanel Margin="10">
            <TextBlock Text="Filter by Ingredient" />
            <TextBox x:Name="IngredientTextBox" Margin="0,0,0,10"/>

            <TextBlock Text="Filter by Food Group" />
            <ComboBox x:Name="FoodGroupComboBox" Margin="0,0,0,10">
                <ComboBoxItem Content="Vegetables" />
                <ComboBoxItem Content="Fruits" />
                <ComboBoxItem Content="Grains" />
                <ComboBoxItem Content="Proteins" />
                <ComboBoxItem Content="Dairy" />
                <ComboBoxItem Content="Fats and Oils" />
                <ComboBoxItem Content="Sweets and Snacks" />
                <ComboBoxItem Content="Beverages" />
                <ComboBoxItem Content="Other" />
            </ComboBox>

            <TextBlock Text="Filter by Maximum Calories" />
            <TextBox x:Name="CaloriesTextBox" Margin="0,0,0,10" />

            <Button Content="Apply Filters" Click="ApplyFilters_Click" />
        </StackPanel>
    </Grid>
</Window>
