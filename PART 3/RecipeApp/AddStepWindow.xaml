<Window x:Class="RecipeApp.AddStepWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Step" Height="200" Width="400">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/background 2.jpeg"/>
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="15*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <StackPanel Margin="10,10,10,10" Grid.ColumnSpan="2">
            <TextBlock Text="Step Description" />
            <TextBox x:Name="StepDescriptionTextBox" Margin="0,0,0,10" />

            <Button Content="Add Step" Click="AddStep_Click" />
        </StackPanel>
    </Grid>
</Window>
