<Window x:Class="RecipeApp.CreateRecipeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Create Recipe" Height="450" Width="400">
    <Grid>
        <StackPanel Margin="10">
            <StackPanel.Background>
                <ImageBrush ImageSource="/real background.png"/>
            </StackPanel.Background>

            <TextBlock Text="Recipe Name" FontSize="24" FontWeight="Bold" />
            <TextBox x:Name="RecipeNameTextBox" Margin="0,0,0,10"/>

            <TextBlock Text="Number of Ingredients" Foreground="Black" FontSize="24" FontWeight="Bold" />
            <TextBox x:Name="NumIngredientsTextBox" Margin="0,0,0,10" />

            <Button Content="Add Ingredients" Click="AddIngredients_Click" Background="Black" />
            <Button Content="Add Steps" Click="AddSteps_Click" Background="Black" />
            <Button Content="Create Recipe" Click="CreateRecipe_Click" Background="#FF080808" />
        </StackPanel>
    </Grid>
</Window>
